{
  "manifest_version": 3,
  "name": "Haddi's Logs :/",
  "version": "1.4",
  "description": "Elegant in-browser notepad with sections, highlighting, and styled links",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "windows", "system.display"]
}

